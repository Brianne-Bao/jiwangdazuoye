
/* 选择周数部分 */

.title_left>view {
    display: inline-block;
}

.week {
    font-size: 32rpx;
    line-height: 18rpx;
}

.week>image {
    width: 0;
    height: 0;
}

button {
    border: none;
    background-color: transparent;
    outline: none;
}

/* 表格框架部分 */
.top {
    display: flex;
    justify-content: space-evenly;
    color: #333;
    background-color: #EFEFF4;
}

.top-text {
    width: 120rpx;
    height: 100rpx;
    font-size: 30rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}

.left {
    width: 70rpx;
    font-size: 9pt;
    justify-content: center;
    display: flex;
    align-items: center;
}

/* 课程表部分 */
.smalltext {
    position: absolute;
    top: 40rpx;
    left: 8rpx;
    /* margin: 40rpx 0 40rpx 8rpx; */
    font-size: 26rpx;
    color: #fff;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
}

.flex-item {
    width: 90rpx;
    height: 100px;
}

.kcb-item {
    position: absolute;
    justify-content: center;
    display: flex;
    border-radius: 5px;
}

.classRoom {
    position: absolute;
    bottom: 10rpx;
    font-size: 8pt;
    color: #fff;
    padding-left: 2px;
}

.logo {
    color: #FFF;
    font-size: 8pt;
    text-align: center;
    line-height: 30rpx;
    position: absolute;
    top: 0;
    right: 0;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
}

.divLine {
    background: #E0E3DA;
    width: 100%;
    height: 3rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}